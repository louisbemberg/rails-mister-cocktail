<div class="container">
  <h1>Here's a list of all the Cocktails</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail_path(cocktail) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="btn btn-info">
    <%= link_to 'New Cocktail', new_cocktail_path %>
  </div>
</div>
