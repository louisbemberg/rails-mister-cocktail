<div class="container">
  <div class="banner">
    <h1>Let's get a drink.</h1>
  </div>
</div>
<h1> </h1>
<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>');">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random);">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
      <% end %>
    <% end %>
  </div>
  <h1> </h1>
    <div class="wide-button btn btn-info center">
      <%= link_to 'New Cocktail', new_cocktail_path %>
    </div>
</div>
